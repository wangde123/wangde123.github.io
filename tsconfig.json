{
  "extends": "./src/.umi/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    ".umirc.ts",
    "typings.d.ts",
    "test/**/*",
    "mock/**/*",
    ".eslintrc.js",
    ".stylelintrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".umi-production"
  ]
}
